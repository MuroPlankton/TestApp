<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/single_receipt_list_card_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/bee"
        />

    <TextView
        android:id="@+id/single_receipt_list_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/single_receipt_list_card_image"
        android:layout_toRightOf="@id/single_receipt_list_card_image"
        tools:text="Receipt title"
        />

    <TextView
        android:id="@+id/single_receipt_list_card_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_receipt_list_card_title"
        android:layout_toRightOf="@id/single_receipt_list_card_image"
        tools:text="01.01.1970"
        />
</RelativeLayout>