<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:background="@color/black"
        android:textColor="@color/white"
        android:hint="Give your receipt a title"
        android:textColorHint="@color/light_gray"
        android:layout_marginHorizontal="32dp"
        android:padding="8dp"
        android:id="@+id/activty_receipt_saver_edit_title"
        />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="32dp"
        android:id="@+id/activty_receipt_saver_date_picker"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_receipt"
        android:id="@+id/activty_receipt_saver_save_button"
        />


</LinearLayout>