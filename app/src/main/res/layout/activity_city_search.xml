<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/black"
        android:layout_above="@id/activity_city_search_input"
        android:id="@+id/activity_city_search_line"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:id="@+id/activity_city_search_input"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        android:layout_margin="2dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_city_search_line"
        android:id="@+id/activity_city_search_results"
        />

</RelativeLayout>